= form_for @layover do |f|
  - if @layover.errors.any?
    #error_explanation
      %h2= "#{pluralize(@layover.errors.count, "error")} prohibited this layover from being saved:"
      %ul
        - @layover.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :arrive_time
    = f.time_select :arrive_time
  .field
    = f.label :ignor
    = f.check_box :ignor
  .field
    = f.label :schedule
    = f.text_field :schedule
  .field
    = f.label :station
    = f.text_field :station
  .actions
    = f.submit 'Save'
